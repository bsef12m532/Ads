@{
    ViewBag.Title = "Feedback";
}

<body>



    <div>
        <div class="row">

            <div class="col-md-8">
                <h1 align="center">Feedback</h1>

                <form action="/Feedback/Add" method="get" class="form-horizontal">


                    <div class="form-group">
                        <label for="inputName3" class="col-sm-2 control-label">Subject</label>
                        <div class="col-sm-10">
                            <input type="text" required name="Subject" class="form-control" id="inputName3" placeholder="Subject">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputNotes3" class="col-sm-2 control-label">Feedback</label>
                        <div class="col-sm-10">
                            <textarea required class="form-control" id="inputNotes3" name="Body" rows="5"></textarea>
                        </div>
                    </div>
                    


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>

</body>
