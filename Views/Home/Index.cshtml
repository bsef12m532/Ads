@{
    ViewBag.Title = "Ads Buy & Sell";
}

<html>
<head>
    <title></title>

   
    <link href="~/Content/full-slider.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet">
</head>
<body >
    <header style="width:100%; height:550px; position:relative; margin-top:-20px;"  id="myCarousel" class="carousel slide center-block">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image:url('/Images/MyImages/g2n.jpg');"></div>
                <div class="carousel-caption">
                    <h1>Buy & Sell Cars</h1>
                </div>
            </div>
            <div class="item">
                <!-- set the second background image using inline CSS below. -->
                <div class="fill" style="background-image:url('/Images/MyImages/g3n.jpg');"></div>
                <div class="carousel-caption">
                    <h1>Buy & Sell Furniture</h1>
                </div>
            </div>

            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <div class="fill" style="background-image:url('/Images/MyImages/g4n.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Buy & Sell Mobile Phones</h2>
                </div>

            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>

   
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>

   
</body>
</html>
