
@model IEnumerable<Ads.Models.User>


@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Ads.Models;
@using System;

<h2 align="center">All Users</h2>

<table class="table table-bordered table-hover" cellspacing="20px" cellpadding="20px" border="1" align="center">

    <tr><th>ID</th><th>Name</th><th>Email</th></tr>

    @foreach (var u in Model)
    {

        <tr>
            <td>@u.Id</td>
            <td>@u.Name</td>
            <td>@u.Email</td>

        </tr>


    }


</table>